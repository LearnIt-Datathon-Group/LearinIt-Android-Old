<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@color/colorCardBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/classes_title"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorCardBackgroundText"/>

        <TextView
            android:id="@+id/text_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="long long long long long long long text"
            android:textColor="@color/colorBackgroundText"
            android:textSize="@dimen/text"/>

        <VideoView
            android:id="@+id/video_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RadioGroup
            android:id="@+id/choice_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">



        </RadioGroup>

    </LinearLayout>

</android.support.v7.widget.CardView>