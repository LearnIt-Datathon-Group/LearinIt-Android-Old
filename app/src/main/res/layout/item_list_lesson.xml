<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:orientation="horizontal"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:id="@+id/image_holder"
        android:layout_width="@dimen/small_sqrt_content_size"
        android:layout_height="@dimen/small_sqrt_content_size"
        android:background="@drawable/check_box"
        android:padding="2dp"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>

    <View
        android:id="@+id/placeholder"
        android:layout_toEndOf="@+id/image_holder"
        android:layout_width="25dp"
        android:layout_height="1dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/text"
        android:layout_toEndOf="@+id/placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        android:textColor="@color/colorCardBackgroundText"
        android:textSize="@dimen/sub_title"
        android:layout_gravity="center"
        android:layout_centerVertical="true"/>

</RelativeLayout>